<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editpost"
    >


    <ImageView
        android:id="@+id/edit_post_image"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="fitXY"
        android:padding="8dp"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/edit_post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_post_image"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:text="description"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/edit_post_editbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_post_description"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="134dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/button"
        android:text="Edit Post"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/edit_post_deletebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Post"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/edit_post_editbutton"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/button"

        />


</RelativeLayout>