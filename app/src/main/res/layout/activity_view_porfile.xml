<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ViewPorfile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/profile_icon"
        android:id="@+id/ProfilePicture"
        />

        <RelativeLayout
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ProfilePicture"
            android:id="@+id/details"
            android:background="@drawable/input"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
        >
    <TextView
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:id="@+id/Namey"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/nametext"
        android:background="@drawable/borderaboveandbelow"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textColor="#000"
                android:textSize="20sp"
                android:id="@+id/nametext"
                android:gravity="center_vertical"
                android:text="Name:      "
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"

                />

    <EditText
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Namey"
        android:id="@+id/Semesterno"
        android:layout_toRightOf="@+id/semtext"
        android:textColor="#000"
        android:textSize="20sp"
        android:background="@drawable/borderaboveandbelow"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        />
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit"
                android:id="@+id/Change_Semester"
                android:text="Change Email"
                android:layout_toRightOf="@+id/Semesterno"
                android:layout_below="@+id/Namey"
                android:layout_marginRight="10dp"

                />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:id="@+id/semtext"
            android:gravity="center_vertical"
            android:text="Semester"
            android:layout_below="@+id/nametext"
                android:layout_marginLeft="10dp"

            />


    <EditText
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Semesterno"
        android:id="@+id/Emaily"
        android:textColor="#000"
        android:layout_toRightOf="@+id/Etext"
        android:textSize="20sp"
        android:background="@drawable/borderaboveandbelow"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"

        />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit"
                android:id="@+id/Change_Email"
                android:text="Change Email"
                android:layout_toRightOf="@+id/Emaily"
                android:layout_below="@+id/Change_Semester"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textColor="#000"
                android:textSize="20sp"
                android:id="@+id/Etext"
                android:gravity="center_vertical"
                android:text="Email       "
                android:layout_below="@+id/semtext"
                android:layout_marginLeft="10dp"

                />

                />
            <TextView
                android:layout_width="320dp"
                android:layout_height="10dp"
                android:layout_below="@+id/Emaily"
                android:id="@+id/Emaily2"
                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"

                />


        </RelativeLayout>


</RelativeLayout>